
<div class="bg-white min-vh-100 d-grid px-3">
  <p class="m-auto ms-2">
    <%= link_to  "< Back", 'javascript:history.back()',  class: "green-back-link fw-bold text-decoration-none" %>
  </p>
  <div class="d-grid m-auto">
    <h1 class="mx-auto fw-bold">Edit Appointment</h1>
  </div>
  <div class="mx-auto px-3">
    <%= form_with model: @appointment do |form| %>
      <div class="d-grid gap-2">
        <div>
          <%= form.label :date_time, class: "fw-bold" %>
        </div>
        <div>
          <%= form.datetime_field :date_time, class: "form-control bg-light"  %>
        </div>
        <div>
          <%= form.label :reason, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :reason, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :service_id, class: "fw-bold" %><br>
        </div>
        <div>
          <%= form.collection_select(:service_id, Service.all.order(name: :asc), :id, :name, { include_blank: true }, { class: "form-control rounded-pill text-center bg-light" }) %>
        </div>
        <div>
          <%= form.label :patient_id, class: "fw-bold" %><br>
        </div>
        <div>
          <%= form.collection_select(:patient_id, Patient.all.order(name: :asc), :id, :patient_full_name, { include_blank: true }, { class: "form-control rounded-pill text-center bg-light" }) %>
        </div>
        <div>
          <%= form.label :user_id, class: "fw-bold" %><br>
        </div>
        <div>
          <%= form.collection_select(:user_id, User.all.order(role: :asc, name: :asc), :id, :get_professionals, { include_blank: true }, { class: "form-control rounded-pill text-center bg-light" }) %>
        </div>
        <div>
          <%= form.label :status, class: "fw-bold" %>
        </div>
        <div>
          <%= form.select :status, [["Pending", "Pending"], ["Canceled", "Canceled"], ["Finished", "Finished"] ], {}, {class: "form-control  bg-light rounded-pill text-center"} %>
        </div>
        <div>
          <%= form.label :payment_status, class: "fw-bold" %>
        </div>
        <div>
          <%= form.select :payment_status, [["Missing", "Pending"], ["Paid", "Paid"]], {}, {class: "form-control  bg-light rounded-pill text-center"} %>
        </div>
        <div>
          <%= form.label :score, class: "fw-bold" %>
        </div>
        <div>
          <%= form.select :score, [["1 point", 1], ["2 points", 2], ["3 points", 3], ["4 points", 4], ["5 points", 5], ["6 points", 6], ["7 points", 7], ["8 points", 8], ["9 points", 9], ["10 points", 10]], {}, {class: "form-control  bg-light rounded-pill text-center"} %>
        </div>
        <div>
          <%= form.label :review, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_area :review, class: "form-control bg-light" %>
        </div>
        <div class="d-grid gap-3 col-6 mx-auto pt-4">
          <%= form.submit 'Edit', class: "btn color-btn rounded-pill text-white fw-bold" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
