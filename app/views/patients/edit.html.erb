<div class="bg-white min-vh-100 d-grid">
  <div class="d-grid">
    <h1 class="mx-auto my-auto fw-bold px-3">Edit Professional</h1>
  </div>
  <div class="mx-auto px-3">
    <%= form_with model: @patient do |form| %>
      <div class="d-grid gap-2">
        <div>
          <%= form.label :name, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :name, class: "form-control bg-light"  %>
        </div>
        <div>
          <%= form.label :second_name, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :second_name, class: "form-control bg-light"  %>
        </div>
        <div>
          <%= form.label :last_name, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :last_name, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :second_last_name, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :second_last_name, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :birth_date, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :birth_date, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :phone, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :phone, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :email, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :email, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :password, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :password, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :height, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :height, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :observations, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :observations, class: "form-control bg-light" %>
        </div>
        
        <div class="d-grid gap-3 col-6 mx-auto pt-4">
          <%= form.submit 'Edit', class: "btn color-btn rounded-pill text-white fw-bold" %>
        </div>
      </div>
    <% end %>
    <div class="d-grid col-6 mx-auto pt-2 mb-3">
      <div class="mx-auto">
        <%= button_to "Go back", patients_path, method: :get, class: "btn color-btn rounded-pill text-white fw-bold mx-auto" %>
      </div>
    </div>
  </div>
</div>