<div class="bg-white min-vh-100 d-grid">
  <p class="m-auto ms-2">
    <%= link_to  "< Back", cards_path,  class: "green-back-link fw-bold text-decoration-none" %>
  </p>
  <div class="d-grid m-auto">
    <h1 class="mx-auto fw-bold">Edit Card Detail</h1>
  </div>
  <div class="mx-auto">
    <%= form_with model: @card do |form| %>
      <div class="d-grid gap-2">
        <div>
          <%= form.label "Card Date", class: "fw-bold" %>
        </div>
        <div>
          <%= form.date_field :created_at, class: "form-control bg-light"  %>
        </div>
        <div>
          <%= form.label :weight, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :weight, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label "Dieta", class: "fw-bold" %>
        </div>
        <div>
          <%= form.collection_select(:diet_id, Diet.all.order(name: :asc), :id, :name, { include_blank: true }, { class: "form-control rounded-pill text-center bg-light" }) %>
        </div>
        <div>
          <%= form.label :comments, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_area :comments, class: "form-control bg-light" %>
        </div>
        <div>
          <%= form.label :next_appointment, class: "fw-bold" %>
        </div>
        <div>
          <%= form.date_field :next_appointment, class: "form-control bg-light" %>
        </div>
        <div class="d-grid gap-3 col-6 mx-auto pt-4">
          <%= form.submit 'Edit', class: "btn color-btn rounded-pill text-white fw-bold"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
