<div class="d-grid">
  <div class="d-grid my-4">
    <h1 class="mx-auto fw-bold text-white px-3">Manage specialities</h1>
  </div>
  <div class="card-bcg-panel w-75 my-2 px-2 py-2 mx-auto own-radius shadow-lg grid-container--fit ">
    <% @specialities.each do |speciality|%>
      <div class="mx-auto card-user-bcg own-radius grid-element mt-2 text-center ">
        <div>
          <%= speciality.name %>
        </div>
        <div class="d-grid gap-1 mx-auto mb-3">
          <%= button_to "Edit", edit_speciality_path(speciality), method: :get , form_class: "mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
          <%= button_to "Destroy", speciality_path(speciality), method: :delete , form_class: "mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-grid gap-2 mx-auto mb-3">
    <div class="mx-auto">
      <%= button_to "New Speciality", new_speciality_path, method: :get , form_class: "mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
    </div>
    <div class="mx-auto">
      <%= button_to "Go back", professionals_path, method: :get , form_class: "mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
    </div>
  </div>
</div>
