<div class="bg-white min-vh-100 d-grid">
  <div class="d-grid">
    <h1 class="mx-auto my-auto fw-bold px-3">Create Speciality</h1>
  </div>
  <div class="mx-auto px-3">
    <%= form_with(model: @speciality) do |form| %>
      <% @speciality.errors.full_messages.each do |error| %>
        <div class="text-danger">
          <%= error %>
        </div>
      <% end %>
      <div class="d-grid gap-2">
        <div>
          <%= form.label :name, class: "fw-bold" %>
          <%= form.text_field :name, class: "form-control"  %>
        </div>
        <div class="d-grid gap-3 col-6 mx-auto pt-4">
          <%= form.submit 'Create', class: "btn color-btn rounded-pill text-white fw-bold"%>
        </div>
      </div>
    <% end %>
    <div class="d-grid col-6 mx-auto pt-2 mb-3">
      <div class="mx-auto">
        <%= button_to "Go back", specialities_path, method: :get, class: "btn color-btn rounded-pill text-white fw-bold" %>
      </div>
    </div>
  </div>
</div>
