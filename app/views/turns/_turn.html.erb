<div class="container text-center">
<div class="row p-3">
  <div class="col">
  <% @turns.each do |turn| %>
    <div class="card text-center mb-4 w-20">
      <div class="card-body">
        <h5 class="card-title">
          <%= turn.schedule.gethours %>
        </h5>
        <p class="card-text">
          <%= turn.user.getname %> 
        </p>
        <a>
          <%= link_to "check", turn_path(turn), method: :get, class: "btn color-btn rounded-pill text-white fw-bold" %>
        </a>
      </div>
    </div>
  <% end %>
  </div>
</div>
</div>
