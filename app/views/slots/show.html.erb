<div class="bg-white vh-100 p-5">
  <h1>Service space detail</h1>
  <p style="color: green"><%= notice %></p>
  <%= render "slot", slot: @slot %>
  <div class="d-flex gap-2">
    <%= link_to "Edit this space", edit_slot_path(@slot), class: 'btn btn-success fw-bold' %>
    <%= link_to "Back to spaces", slots_path, class: 'btn btn-primary fw-bold' %>
    <%= button_to "Destroy this space", @slot, method: :delete, class: 'btn btn-danger fw-bold' %>
  </div>
</div>
