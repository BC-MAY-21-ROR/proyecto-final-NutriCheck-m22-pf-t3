  <div class="form-group py-2">
    <%= form.label :professional, style: "display: block", class: "pb-2 fw-bold" %>
    <%= form.collection_select(:professional, User.where(role: 'professional').order(name: :asc), :id, :get_speciality_name, { include_blank: true }, { class: "form-control" }) %>
