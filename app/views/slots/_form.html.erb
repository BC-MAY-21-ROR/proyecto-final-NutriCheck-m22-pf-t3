  </div>
  <div class="form-group py-2">
    <%= form.label :service, style: "display: block", class: "pb-2 fw-bold" %>
    <%= form.collection_select(:service, Service.order(name: :asc), :id, :name, { include_blank: true }, { class: "form-control" }) %>
    <small id="serviceHelp" class="form-text text-muted">Select service to offer.</small>
  </div>
