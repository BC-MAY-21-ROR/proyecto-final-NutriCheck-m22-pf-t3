<%= form_with(model: slot) do |form| %>
  <% if slot.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(slot.errors.count, "error") %> prohibited this slot from being saved:</h2>
      <ul>
        <% slot.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>
  <div>
    <%= form.label :service, style: "display: block" %>
    <%= form.collection_select(:service, Service.all.order(name: :asc), :id, :name, { include_blank: true }, { class: "" }) %>
  </div>
  <div>
    <%= form.label :professional, style: "display: block" %>
    <%= form.collection_select(:professional, User.where(role: 'professional').order(name: :asc), :id, :name, { include_blank: true }, { class: "" }) %>
  </div>
  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.datetime_field :start_time %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
