<div class="vh-100 m-0 p-0">
  <div class="masthead">
    <div class="masthead-content text-white h-50">
      <div class="container-fluid px-4 px-lg-0">
        <h2 class="fst-italic lh-1 mb-4 text-center">Change your password</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field pb-2">
            <%= f.label :password, "New password" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field pb-2">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions col-sm mx-auto w-100 pb-2">
            <%= f.submit "Change my password", class: "btn color-btn text-white fw-bold w-100"  %>
          </div>
        <% end %>
        <div class="d-flex flex-column my-2">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div> 
