<div class="bg-white min-vh-100 d-grid">
  <p class="m-auto ms-2">
    <%= link_to  "< Back", users_path,  class: "green-back-link fw-bold text-decoration-none" %>
  </p>
  <div class="d-grid m-auto">
    <h1 class="mx-auto fw-bold">Edit <%= resource_name.to_s.humanize %></h1>
  </div>
  <div class="mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
      
      <% @user.errors.full_messages.each do |error| %>
        <div class="text-danger">
          <%= error %>
        </div>
      <% end %>
      
      <div class="d-grid gap-2">
        <div>
          <%= form.label :name, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :name, class: "form-control"  %>
        </div>
        <div>
          <%= form.label :last_name, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>
        <div>
          <%= form.label :birth_date, class: "fw-bold" %>
        </div>
        <div>
          <%= form.date_field :birth_date, class: "form-control" %>
        </div>
        <div>
          <%= form.label :phone, class: "fw-bold" %>
        </div>
        <div>
          <%= form.text_field :phone, class: "form-control" %>
        </div>
        <div>
          <%= form.label :email, class: "fw-bold" %>
        </div>
        <div>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        <div>
          <%= form.label :password, class: "fw-bold" %> <i>(leave blank if you don't want to change it)</i><br />
        </div>
        <div>
          <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>

          <% end %>
        </div>
        <div>
          <%= form.label :password, class: "fw-bold" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div>
          <%= form.password_field :password, class: "form-control" %>
        </div>
        <div>
          <%= form.label :password_confirmation, class: "fw-bold" %>
        </div>
        <div>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div>
          <%= form.label :role, class: "fw-bold" %>
        </div>
        <div>
          <%= form.select :role, [["Manager", "manager"],["Professional", "professional"]], {}, {class: "form-control rounded-pill text-center"} %>
        </div>
        <div>
          <%= form.label :photo, class: "fw-bold" %><br>
          <%= form.file_field :photo, class: "form-control" %>
        </div>
        <div class="d-grid gap-3 col-6 mx-auto pt-4">
          <%= form.submit "Update", class: "btn color-btn rounded-pill text-white fw-bold" %>
        </div>
      </div>
    <% end %>

  <h3 class="mx-auto fw-bold m-4 text-center">Cancel my account</h3>

  <p class="fw-bold">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger rounded-pill text-white fw-bold" %></p>
  </div>
</div>
