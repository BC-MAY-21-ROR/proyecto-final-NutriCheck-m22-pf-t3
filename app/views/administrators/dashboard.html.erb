<div class="d-grid gap-2 my-9 mt-4">
  <h1 class="mx-auto text-white fw-bold">Administrator Panel</h1>
</div>
<div class="mx-2 my-3 bg-container-cards rounded">
  <div class="d-flex row;">
    <div class="col-md-4 rounded">
      <% if current_user.photo.attached? %>
        <%= image_tag(current_user.photo, class: "card-img h-100 cover") %>
      <% else %>
        <%= image_tag('coming_soon_2.png', class: "card-img h-100 cover") %>
      <% end %>
    </div>
    <div class="card-body bg-container-cards rounded">
      <h5 class="card-title"><%= current_user.full_name %></h5>
      <p class="card-text m-0"><%= current_user.email %></p>
      <p class="card-text m-0"><%= current_user.phone %></p>
      <div class="btn-group gap-1 w-100" role="group" aria-label="Basic example" >
        <%= button_to "Edit", edit_user_path(current_user), method: :get, type: "button", form_class: "col-sm mx-auto w-75", class: "btn btn-sm color-btn text-white fw-bold w-100" %>
        <%= button_to "Exit", destroy_user_session_path, method: :delete, type: "button", form_class: "col-sm mx-auto w-25", class: "btn btn-sm btn-warning text-white fw-bold w-100" %>
      </div>
    </div>
  </div>
</div>
<div class="d-grid gap-4">
  <div class="d-grid gap-2">
    <h2 class="mx-auto my-3 text-white fw-bold">Options</h2>
    <div class="d-grid gap-3">
      <%= button_to "Manage Managers", managers_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
      <%= button_to "Manage Professionals", professionals_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold"%>
      <%= button_to "Manage Schedules", schedules_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
    </div>
  </div>
  <div class="d-grid gap-2">
    <h2 class="mx-auto my-3 text-white fw-bold">Reports</h2>
    <div class="d-grid gap-3">
      <%= button_to "Patients", in_construction_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn btn-warning rounded-pill text-white fw-bold" %>
      <%= button_to "Appointments", in_construction_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn btn-warning rounded-pill text-white fw-bold" %>
      <%= button_to "Sales", in_construction_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn btn-warning rounded-pill text-white fw-bold"%>
    </div>
  </div>
</div>
