<div class="d-grid gap-2 my-9 mt-4">
  <h1 class="mx-auto text-white fw-bold">Administrators Admin Panel</h1>
</div>
<% @administrators.each do |administrator| %>
  <div class="mx-2 my-3 bg-container-cards rounded">
    <div class="d-flex row;">
      <div class="col-md-4 rounded">
        <img src="/assets/indice.jpg" class="card-img h-100 cover" alt="...">
      </div>
      <div class="card-body bg-container-cards rounded">
        <h5 class="card-title"><%=administrator.name %> <%=administrator.last_name %></h5>
        <p class="card-text"><%=administrator.email %></p>
        <p class="card-text"><%=administrator.phone %></p>
        <div class="btn-group gap-1 w-100" role="group" aria-label="Basic example" >
          <%= button_to "Edit", edit_administrator_path(administrator), method: :get,type: "button", form_class: "col-sm mx-auto w-75", class: "btn btn-sm color-btn text-white fw-bold w-100" %>
          <%= button_to "Show", administrator_path(administrator), method: :get, form_class: "col-sm mx-auto w-25", class: "btn btn-sm btn-warning text-white fw-bold w-100" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="d-grid gap-4">
  <div class="d-grid gap-2">
    <h2 class="mx-auto my-3 text-white fw-bold">Options</h2>
    <div class="d-grid gap-3">
      <%= button_to "Manage Managers", managers_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
      <%= button_to "Manage Professionals", professionals_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold"%>
      <%= button_to "Manage Schedules", schedules_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
    </div>
  </div>
  <div class="d-grid gap-2">
    <h2 class="mx-auto my-3 text-white fw-bold">Reports</h2>
    <div class="d-grid gap-3">
      <%= button_to "Patients", in_construction_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
      <%= button_to "Appointments", in_construction_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold" %>
      <%= button_to "Sales", in_construction_path, method: :get, type: "button",  form_class: "d-grid gap-2 col-6 mx-auto", class: "btn color-btn rounded-pill text-white fw-bold"%>
    </div>
  </div>
</div>
